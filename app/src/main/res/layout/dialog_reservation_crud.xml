<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Reserv_CRUD_IdReser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#263238"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="Client: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Reserv_CRUD_Clt"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#192125" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="Debut: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Reserv_CRUD_Start"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="date"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="Fin: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Reserv_CRUD_End"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="date"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="Chambre: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Reserv_CRUD_Room"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="number"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Reserv_CRUD_Modify"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#CC263238"
            android:text="Mod"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/Add_bill_btnAjt"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#CC263238"
            android:text="Supp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/Add_bill_btnCancel"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Cancel"
            android:textColor="#263238"
            android:backgroundTint="#FDFDFD"

            app:cornerRadius="15dp" />
    </LinearLayout>
</LinearLayout>