<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Employee_CRUD_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="#263238"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Employe Id : "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Employee_CRUD_IdEmp"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#192125" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Nom: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Employee_CRUD_Nom"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Departement: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Employee_CRUD_Departement"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Salaire: "
            android:textColor="#192125"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/Employee_CRUD_Salary"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="0"
            android:ems="10"
            android:inputType="number"
            android:textColor="#192125" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Employee_CRUD_Modify"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#CC263238"
            android:text="Mod"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/Employee_CRUD_Delete"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="#CC263238"
            android:text="Supp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/Employee_CRUD_Cancel"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Cancel"
            android:textColor="#263238"
            android:backgroundTint="#FDFDFD"

            app:cornerRadius="15dp" />
    </LinearLayout>
</LinearLayout>